  // Endpoint details.
  protected $endpoint = NULL;
  // The default webform components.
  protected $form_components = array(
    1 => array(
      'id' => 'first_name',
      'type' => 'textfield',
      'name' => 'First Name',
    ),
    2 => array(
      'id' => 'last_name',
      'type' => 'textfield',
